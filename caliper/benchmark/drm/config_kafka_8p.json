{
  "blockchain": {
    "type": "fabric",
    "config": "benchmark/drm/fabric1.json"
  },
  "command" : {
    "start": "echo ola",
    "end" : "echo adeus"
  },
  "test": {
    "name": "drm",
    "description" : "Benchmark for DRM scenario",
    "clients": {
      "type": "local",
      "number": 1
    },
    "rounds": [
      {
        "label" : "init",
        "txNumber" : [200],
        "arguments": {  "itemBytes": 2048000 },
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 50}}],
        "callback" : "benchmark/drm/init.js"
      },
      {
        "label" : "query",
        "txNumber" : [200],
        "arguments": {  "itemBytes": 2048000 },
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 50}}],
        "callback" : "benchmark/drm/query.js"
      }]
  },
  "monitor": {
    "type": ["docker", "process"],
    "docker":{
      "name": ["all"]
    },
    "process": [
      {
        "command" : "node",
        "arguments" : "local-client.js",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}